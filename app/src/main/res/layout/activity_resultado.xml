
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/senoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="Seno:" />

    <TextView
        android:id="@+id/cosenoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/senoTextView"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="Coseno:" />

    <TextView
        android:id="@+id/areaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cosenoTextView"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="Área:" />

    <TextView
        android:id="@+id/perimetroTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/areaTextView"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="Perímetro:" />
</RelativeLayout>
